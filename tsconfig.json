{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "types": ["node", "jest"]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
